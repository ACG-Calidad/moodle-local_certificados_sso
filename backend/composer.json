{
    "name": "acg-calidad/certificados-backend",
    "description": "API REST para sistema de gestiÃ³n de certificados ACG Calidad",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Oliver Castelblanco",
            "email": "oliver@acgcalidad.co"
        }
    ],
    "require": {
        "php": ">=8.4.0",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "fpdf/fpdf": "^1.86",
        "setasign/fpdi": "^2.6",
        "aws/aws-sdk-php": "^3.0",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "ACG\\Certificados\\": "lib/",
            "ACG\\Certificados\\Models\\": "lib/models/",
            "ACG\\Certificados\\Services\\": "lib/services/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ACG\\Certificados\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "migrate": "php scripts/migrate_database.php",
        "calculate-grades": "php scripts/calculate_legacy_grades.php"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
